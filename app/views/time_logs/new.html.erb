<h1>New time_log</h1>

<% form_for(@time_log) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :task_type %><br />
    <%= f.text_field :task_type %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :task_date %><br />
    <%= f.date_select :task_date %>
  </p>
  <p>
    <%= f.label :worked_hours %><br />
    <%= f.datetime_select :worked_hours %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', time_logs_path %>